package main;

public class Ejercicio2 {

	public static void main(String[] args) {
		// Crear un matriz de 5 x 5
		int matriz[][] = new int [5][5];

		// Llenar la matriz con números aleatorios.
		for (int i = 0; i < matriz.length; i++) {
			for (int j = 0; j < matriz[i].length; j++) {
				matriz[i][j] = (int)(Math.random() * 100);
			}
		}
		
		int sum = 0, cont = 0, mayor = 0;
		
		for (int row[] : matriz) {
			for (int celda : row) {
				sum += celda;
				cont++;
				if (celda > mayor)
					mayor = celda;
				System.out.print(celda + " ");
			}
		}
		System.out.println("");
		
		// Mostrar en consola el promedio de la matriz.
		int prom = sum / cont;
		System.out.println("El promedio es " + prom);
		// Mostrar en consola el número mayor y la cantidad de veces que este se repite
		System.out.println("El mayot es " + mayor);

	}

}
